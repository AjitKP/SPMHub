<mvc:View  xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" controllerName="hxm.spm.ui.controller.TxRSummary" xmlns:card="sap.f.cards" xmlns:core="sap.ui.core" xmlns:tnt="sap.tnt" displayBlock="true">
    <Shell id="shell">
        <App id="app">
            <pages>      
                <Page showFooter="false" showHeader="false">
                    <content>
                        <HBox justifyContent="Center" alignItems="Center">
                            <GenericTile class="sapUiSmallMarginBegin sapUiSmallMarginTop" header="Sales Transaction Repeater Request"  press="onRequestSubmit"
                                subheader="Create">
                                <TileContent>
                                    <VBox justifyContent="End" alignItems="Center" height="100%">
                                        <HBox justifyContent="Center" alignItems="Center">
                                            <core:Icon src="sap-icon://past" class="sapUiTinyMarginBeginEnd size1"/>
                                            <core:Icon src="sap-icon://journey-depart" class="sapUiTinyMarginBeginEnd size1" />
                                            <core:Icon src="sap-icon://future" class="sapUiTinyMarginBeginEnd size1"/>
                                        </HBox>
                                    </VBox>
                                </TileContent>                               
                            </GenericTile>  
                            <GenericTile class="sapUiSmallMarginBegin sapUiSmallMarginTop" header="Sales Transaction Multiplier Request"  press="onTxMRequestSubmit"
                                subheader="Create">
                                <TileContent>
                                    <VBox justifyContent="End" alignItems="Center" height="100%">
                                        <HBox justifyContent="Center" alignItems="Center">
                                            <core:Icon src="sap-icon://checklist-item" class="sapUiTinyMarginBeginEnd size1"/>
                                            <core:Icon src="sap-icon://journey-depart" class="sapUiTinyMarginBeginEnd size1" />
                                            <core:Icon src="sap-icon://checklist" class="sapUiTinyMarginBeginEnd size1"/>
                                        </HBox>
                                    </VBox>
                                </TileContent>                              
                            </GenericTile>   
                        </HBox>                                                                 
                        <Panel id="idPanelMain" class="zsapUiTinyPadding" backgroundDesign="Solid" >
                            <headerToolbar>
                                <OverflowToolbar height="60px">                                    
                                <content>
                                    <Title text="Transaction Repeater Requests" level="H4"/>
                                    <ToolbarSpacer />
                                    <Button text="New Request" width="150px" type="Accept" icon="sap-icon://create" press="onRequestSubmit" />
                                </content>
                                </OverflowToolbar>
                            </headerToolbar>   
                            <content>                           
                                <Panel id="idPanelLogItem" >
                                    <Table id="idLogItemTable" inset="false" items="{TxRLog>/LogHead}" class="sapUiSizeCompact">
                                        <headerToolbar>
                                        </headerToolbar>
                                        <columns>
                                            <Column width="11%">
                                                <Text text="Request Type" />
                                            </Column>                                        
                                            <Column width="11%">
                                                <Text text="Business Unit" />
                                            </Column>
                                             <Column width="11%">
                                                <Text text="From Time" />
                                            </Column>
                                             <Column width="11%">
                                                <Text text="To Time" />
                                            </Column> 
                                             <Column width="10%">
                                                <Text text="Currency" />
                                            </Column>         
                                             <Column width="15%">
                                                <Text text="Requested By" />
                                            </Column>        
                                             <Column width="11%">
                                                <Text text="Status" />
                                            </Column>  
                                             <Column width="20%">
                                                <Text text="Last Updated" />
                                            </Column>                                                                                                                                                                                                           
                                        </columns>
                                        <items>
                                            <ColumnListItem vAlign="Middle">
                                                <cells>
                                                    <Text text="{TxRLog>reqtype}" /> 
                                                    <Text text="{TxRLog>reqinput/BusinessUnit}" />  
                                                    <Text text="{TxRLog>reqinput/FromTime}" />  
                                                    <Text text="{TxRLog>reqinput/ToTime}" />   
                                                    <Text text="{TxRLog>reqinput/Currency}" />   
                                                    <Text text="{TxRLog>requser}" />  
                                                    <Text text="{TxRLog>reqstatus}" />   
                                                    <Text text="{TxRLog>modifiedAt}" />                                                    
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </Panel>                                                                                          
                            </content>
                        </Panel>
                    </content>
                    <footer>
                        <OverflowToolbar>
                            <ToolbarSpacer />
                            <Button text="" type="Accept" visible="false" />
                        </OverflowToolbar>
                    </footer>                    
                </Page>     
            </pages>
        </App>
    </Shell>
</mvc:View>